#! /bin/sh

set -eu

if test $# = 0; then
  # Ekam is querying the script.  Tell it that we care about headers.
  echo trigger filetype:.h
  exit 0
fi

INPUT=$1

INCLUDE_NAME=INPUT
INCLUDE_NAME=${INCLUDE_NAME##*/src/}
INCLUDE_NAME=${INCLUDE_NAME#src/}
INCLUDE_NAME=${INCLUDE_NAME##*/include/}
INCLUDE_NAME=${INCLUDE_NAME#include/}

echo provide "$INPUT" "c++header:$INCLUDE_NAME"
