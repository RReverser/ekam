#! /bin/sh

set -eu

if test $# = 0; then
  echo trigger test:executable
  exit 0
fi

echo findInput "$1"
read TEST_PROG

echo findProvider special:ekam-interceptor
read INTERCEPTOR

if test "$INTERCEPTOR" = ""; then
  echo "error:  couldn't find intercept.so." >&2
  exit 1
fi

# TODO:  Run in sandbox.

echo newOutput "${1}.log"
read TEST_LOG

if LD_PRELOAD=$INTERCEPTOR $TEST_PROG 3>&1 4<&0 2>"$TEST_LOG" >&2; then
	echo passed
	exit 0
else
  echo "full log: $TEST_LOG" >&2
  egrep 'FAIL|ERROR|FATAL' "$TEST_LOG" >&2
  exit 1
fi
